import tkinter as tk
from tkinter import messagebox
from tkinter import simpledialog
from tkinter import ttk
from datetime import datetime
from tkcalendar import Calendar

def add_task():
    task = task_entry.get()
    if task != "":
        task_with_datetime = f"{task} - {selected_date} {selected_time}"
        tasks_listbox.insert(tk.END, task_with_datetime)
        task_entry.delete(0, tk.END)
    else:
        messagebox.showwarning("Warning", "You must enter a task.")

def delete_task():
    try:
        task_index = tasks_listbox.curselection()[0]
        tasks_listbox.delete(task_index)
    except IndexError:
        messagebox.showwarning("Warning", "You must select a task to delete.")

def clear_tasks():
    tasks_listbox.delete(0, tk.END)

def select_date():
    global selected_date
    cal = Calendar(root, selectmode='day', year=datetime.now().year, month=datetime.now().month, day=datetime.now().day)
    cal.pack()
    cal.bind('<<CalendarSelected>>', lambda event: set_selected_date(cal.get_date()))
    cal.mainloop()

def set_selected_date(date):
    global selected_date
    selected_date = date

def select_time():
    global selected_time
    selected_time = time_spinbox.get()

root = tk.Tk()
root.title("To-Do List App")
root.geometry("500x400")

title_label = tk.Label(root, text="To-Do List", font=("Helvetica", 20))
title_label.pack(pady=10)

task_entry = tk.Entry(root, width=40, font=("Arial", 12))
task_entry.pack(pady=10)

date_button = tk.Button(root, text="Select Date", width=15, font=("Arial", 12), command=select_date)
date_button.pack()

time_frame = tk.Frame(root)
time_frame.pack()

time_label = tk.Label(time_frame, text="Select Time", font=("Arial", 12))
time_label.pack(side=tk.LEFT)

time_spinbox = ttk.Spinbox(time_frame, from_=0, to=23, width=2, font=("Arial", 12), wrap=True)
time_spinbox.pack(side=tk.LEFT)

time_label_minutes = tk.Label(time_frame, text=":", font=("Arial", 12))
time_label_minutes.pack(side=tk.LEFT)

minutes_spinbox = ttk.Spinbox(time_frame, from_=0, to=59, width=2, font=("Arial", 12), wrap=True)
minutes_spinbox.pack(side=tk.LEFT)

add_task_button = tk.Button(root, text="Add Task", width=35, font=("Arial", 12), command=add_task)
add_task_button.pack()

delete_task_button = tk.Button(root, text="Delete Task", width=35, font=("Arial", 12), command=delete_task)
delete_task_button.pack(pady=10)

clear_tasks_button = tk.Button(root, text="Clear All Tasks", width=35, font=("Arial", 12), command=clear_tasks)
clear_tasks_button.pack()

tasks_listbox = tk.Listbox(root, width=60, height=10, font=("Arial", 12))
tasks_listbox.pack(pady=10)

selected_date = datetime.now().date()
selected_time = f"{datetime.now().time().hour}:{datetime.now().time().minute}"

root.mainloop()

